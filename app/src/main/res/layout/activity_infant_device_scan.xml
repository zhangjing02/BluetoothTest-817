<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动连接判断，"
            android:id="@+id/autoCheck"
            android:checked="false" />

        <TextView
            android:id="@+id/tv12"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="搜索范围值："
            android:gravity="center"
            android:textSize="18sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_background_green">
            <widget.WheelView
                android:id="@+id/projectWheel"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                typeface="3"
                />
        </FrameLayout>
    </LinearLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/adult_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="成人模式" />

        <RadioButton
            android:id="@+id/baby_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="婴儿模式" />
        <RadioButton
            android:id="@+id/auto_clear_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动清除历史数据"/>
    </RadioGroup>

    <ListView
        android:id="@+id/scan_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/corner_background_red">
    </ListView>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已测试完成蓝牙地址："
        android:layout_margin="10dp"/>
    <ListView
        android:id="@+id/suc_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/corner_background_red">
    </ListView>
</LinearLayout>
